            font-size: 12px;
            width: 90%;
        }
        textarea{
            max-width: 567px;
            min-width: 567px;
            min-height: 350px;
        }
        #td1{
            width: 80%;
        }
        #td2{
            width: 20%;
        }
        #right-end{
            width: 100%;
            height: 50%;
        }
        #left-end{
            width:63%;
            float:left;

        }
        #right-end1{
            width:100%;
            border:2px solid gainsboro;
            float:right;
            margin-right:10px;
        }
